@model DogGo.Models.ViewModels.WalksFormViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="d-flex justify-content-center align-items-center">
        <div class="card w-75">
            <div class="card-header">
                <div class="card-title">
                    <h4>Schedule a walk with @Model.Walker.Name</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Walk.Date" class="control-label"></label>
                                <input asp-for="Walk.Date" class="form-control" />
                                <span asp-validation-for="Walk.Date" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="form-group col-6">
                                    <label asp-for="Walk.Duration" class="control-label"></label>
                                    <input asp-for="Walk.Duration" class="form-control" />
                                    <span asp-validation-for="Walk.Duration" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="Walk.WalkerId" class="form-control" />
                                </div>
                                <div class="form-group col-6">
                                    <label asp-for="Walk.DogId" class="control-label"></label>
                                    <input asp-for="Walk.DogId" class="form-control" />
                                    <span asp-validation-for="Walk.DogId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add Walk" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
