@model IEnumerable<DogGo.Models.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm mb-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">Email: @Html.DisplayFor(modelItem => item.Email)</p>
                    <p class="card-text">Address: @Html.DisplayFor(modelItem => item.Address)</p>
                    <p class="card-text">Phone: @Html.DisplayFor(modelItem => item.Phone)</p>
                    <p class="card-text">Neighborhood: @Html.DisplayFor(modelItem => item.Neighborhood.Name)</p>

                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </div>
        </div>
    }
</div>

